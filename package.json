{
  "name": "controlme",
  "version": "1.1.0",
  "private": true,
  "description": "A fun app to let others control your PC",
  "license": "MIT",
  "author": "tisbutanalt2",
  "repository": "https://github.com/tisbutanalt2/controlme",
  "main": "app/main/index.js",
  "targets": {
    "main": false
  },
  "scripts": {
    "rebuild": "npm rebuild",
    "postinstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=development electron app/main/index.js",
    "watch:web": "parcel watch src/web/index.html --dist-dir app/web --public-url ./ --no-source-maps --no-hmr --no-cache",
    "watch:client": "parcel watch src/server/web/index.html --dist-dir app/server/web --public-url ./ --no-source-maps --no-hmr --no-cache",
    "watch:electron": "tsc --project tsconfig.electron.json && concurrently -n \"tsc,alias\" -k \"tsc -w --project tsconfig.electron.json\" \"tsc-alias -w -p tsconfig.electron.json --resolve-full-paths\"",
    "watch": "concurrently -n \"web,client,electron\" -k \"bun run watch:web\" \"bun run watch:client\" \"bun run watch:electron\"",
    "build:final": "electron-builder",
    "build:final:windows": "electron-builder --win",
    "build:final:linux": "electron-builder --linux",
    "build:final:mac": "electron-builder --mac",
    "build:final:all": "electron-builder --win --linux --mac",
    "build:electron": "tsc --project tsconfig.electron.json && tsc-alias -p tsconfig.electron.json --resolve-full-paths",
    "build:web": "parcel build src/server/web/index.html --dist-dir app/server/web --public-url ./ --no-source-maps --no-cache",
    "build:client": "parcel build src/web/index.html --dist-dir app/web --public-url ./ --no-source-maps --no-cache",
    "build": "bun run build:web && bun run build:client && bun run build:electron && bun run build:final",
    "node:start": "cross-env NODE_ENV=development electron app/main/index.js",
    "node:watch": "concurrently -n \"web,client,electron\" -k \"npm run watch:web\" \"npm run watch:client\" \"npm run watch:electron\"",
    "node:build": "npm run build:web && npm run build:client && npm run build:electron && npm run build:final"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.0.13",
    "@mui/icons-material": "^6.4.7",
    "@mui/material": "^6.4.7",
    "@ngrok/ngrok": "^1.4.1",
    "@react-spring/web": "^9.7.5",
    "auto-launch": "^5.0.6",
    "axios": "^1.8.3",
    "bcryptjs": "^2.4.3",
    "camera-capture": "^0.0.11",
    "cookie-parser": "^1.4.7",
    "cookies": "^0.9.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.3.9",
    "express": "^4.19.2",
    "get-folder-size": "^4.0.0",
    "glob": "^10.3.16",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "notistack": "^3.0.2",
    "puppeteer": "^1.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.3.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "unzipper": "^0.12.3",
    "v4-uuid": "^1.1.0",
    "wallpaper": "^7.2.1"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.12.0",
    "@types/auto-launch": "^5.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/get-folder-size": "^3.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/unzipper": "^0.10.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "parcel": "^2.12.0",
    "process": "^0.11.10",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "app.control.me",
    "publish": [
      {
        "provider": "github",
        "owner": "tisbutanalt2",
        "repo": "controlme",
        "releaseType": "release"
      }
    ],
    "productName": "Control Me!",
    "executableName": "controlme",
    "files": [
      "./app/**/*"
    ],
    "extraResources": [
      {
        "from": "./assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "npmRebuild": true,
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Control Me!"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Utility"
    }
  }
}
